<div class="card">
  <div class="card-image has-text-centered p-4">
    <% if customer.avatar.attached? %>
      <%= image_tag customer.avatar, class: "image is-128x128 is-inline-block" %>
    <% else %>
      <%= image_tag "default_avatar.png", class: "image is-128x128 is-inline-block" %>
    <% end %>
  </div>

  <div class="card-content">
    <p class="title is-5"><%= customer.full_name %></p>

    <p class="subtitle is-6"><strong>Phone:</strong> <%= customer.phone_number %></p>

    <% if customer.email.present? %>
      <p><strong>Email:</strong> <%= customer.email %></p>
    <% else %>
      <p class="has-text-danger"><strong>Email:</strong> Not provided</p>
    <% end %>

    <% if customer.notes.present? %>
      <div class="content mt-2">
        <strong>Notes:</strong> <%= customer.notes %>
      </div>
    <% end %>
  </div>
</div>
