<%# Payment success page %>

<% content_for :title, "Payment Successful" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 text-center">
      <!-- Success Icon -->
      <div class="mb-4">
        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem;"></i>
      </div>
      
      <h1 class="h2 mb-3">Payment Successful!</h1>
      <p class="lead text-muted mb-4">
        Thank you for your payment. Your order is now being processed.
      </p>

      <!-- Order Info -->
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
          <div class="row text-start">
            <div class="col-6">
              <p class="text-muted mb-1 small">Order Number</p>
              <p class="fw-bold">#<%= @order.id.to_s.rjust(6, '0') %></p>
            </div>
            <div class="col-6">
              <p class="text-muted mb-1 small">Amount Paid</p>
              <p class="fw-bold text-success"><%= number_to_currency(@order.grand_total) %></p>
            </div>
            <div class="col-6">
              <p class="text-muted mb-1 small">Status</p>
              <p><span class="badge bg-success">Paid</span></p>
            </div>
            <div class="col-6">
              <p class="text-muted mb-1 small">Date</p>
              <p class="fw-bold"><%= @order.updated_at.strftime("%b %d, %Y") %></p>
            </div>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="d-flex justify-content-center gap-3">
        <%= link_to customers_order_path(@order), class: "btn btn-outline-success" do %>
          <i class="bi bi-eye me-1"></i> View Order
        <% end %>
        <%= link_to products_path, class: "btn btn-success" do %>
          <i class="bi bi-bag me-1"></i> Continue Shopping
        <% end %>
      </div>
    </div>
  </div>
</div>
