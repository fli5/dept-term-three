<%# Payment cancellation page %>

<% content_for :title, "Payment Cancelled" %>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-6 text-center">
      <!-- Warning Icon -->
      <div class="mb-4">
        <i class="bi bi-x-circle text-warning" style="font-size: 5rem;"></i>
      </div>
      
      <h1 class="h2 mb-3">Payment Cancelled</h1>
      <p class="lead text-muted mb-4">
        Your payment was not completed. Your order is still saved and you can try again.
      </p>

      <% if @order %>
        <!-- Order Info -->
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body">
            <p class="text-muted mb-1 small">Order Number</p>
            <p class="fw-bold mb-3">#<%= @order.id.to_s.rjust(6, '0') %></p>
            <p class="text-muted mb-1 small">Amount Due</p>
            <p class="fw-bold text-danger fs-5"><%= number_to_currency(@order.grand_total) %></p>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="d-flex justify-content-center gap-3">
          <%= link_to new_payment_path(order_id: @order.id), class: "btn btn-success" do %>
            <i class="bi bi-arrow-repeat me-1"></i> Try Again
          <% end %>
          <%= link_to customer_order_path(@order), class: "btn btn-outline-secondary" do %>
            View Order
          <% end %>
        </div>
      <% else %>
        <%= link_to customer_orders_path, class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i> Back to Orders
        <% end %>
      <% end %>

      <!-- Help Text -->
      <p class="text-muted small mt-4">
        Having trouble? <%= link_to "Contact us", page_path('contact') %> for assistance.
      </p>
    </div>
  </div>
</div>
